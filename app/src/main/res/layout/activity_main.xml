<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">

    <data>

        <variable
            name="isLoading"
            type="boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            app:visibleGone="@{isLoading}"
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/rv"
            app:layout_constraintTop_toBottomOf="@+id/cl_main_search_area" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_main_search_area"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_rounded_corners"
            android:elevation="8dp"
            app:iconifiedByDefault="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:queryBackground="@android:color/transparent">

            <androidx.appcompat.widget.SearchView
                android:id="@+id/sv_food"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:iconifiedByDefault="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:queryBackground="@android:color/transparent"
                app:queryHint="@string/query_hint" />

            <ImageView
                android:id="@+id/iv_color_selector"
                android:layout_width="40dp"
                android:layout_height="32dp"
                android:paddingStart="8dp"
                android:paddingEnd="0dp"
                android:src="@drawable/ic_rgb_colour"
                app:layout_constraintEnd_toStartOf="@+id/iv_explore"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sv_food" />

            <ImageView
                android:id="@+id/iv_explore"
                android:layout_width="40dp"
                android:layout_height="32dp"
                android:paddingStart="8dp"
                android:paddingEnd="0dp"
                android:src="@drawable/ic_twotone_explore"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_color_selector"
                app:layout_constraintTop_toBottomOf="@+id/sv_food" />

            <HorizontalScrollView
                android:id="@+id/hsv_colours_selector"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sv_food">

                <RadioGroup
                    android:id="@+id/rg_colour_picker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp">

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/rb_colour_rgb"
                        style="@style/ColorRadio"
                        android:button="@drawable/ic_rgb_colour" />

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/rb_colour_bnw"
                        style="@style/ColorRadio"
                        android:button="@drawable/ic_bnw_colour" />

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/rb_colour_black"
                        style="@style/ColorRadio"
                        android:button="@drawable/ic_black_colour" />

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/rb_colour_white"
                        style="@style/ColorRadio"
                        android:button="@drawable/ic_white_colour" />

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/rb_colour_yellow"
                        style="@style/ColorRadio"
                        android:button="@drawable/ic_yellow_colour" />

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/rb_colour_orange"
                        style="@style/ColorRadio"
                        android:button="@drawable/ic_orange_colour" />

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/rb_colour_red"
                        style="@style/ColorRadio"
                        android:button="@drawable/ic_red_colour" />

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/rb_colour_pink"
                        style="@style/ColorRadio"
                        android:button="@drawable/ic_pink_colour" />

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/rb_colour_purple"
                        style="@style/ColorRadio"
                        android:button="@drawable/ic_purple_colour" />

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/rb_colour_blue"
                        style="@style/ColorRadio"
                        android:button="@drawable/ic_blue_colour" />

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/rb_colour_teal"
                        style="@style/ColorRadio"
                        android:button="@drawable/ic_teal_colour" />

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/rb_colour_green"
                        style="@style/ColorRadio"
                        android:button="@drawable/ic_green_colour" />
                </RadioGroup>

            </HorizontalScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>